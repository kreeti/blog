<div class="jumbotron">
  <h2 class="display-4">Create Account</h1>
  <p class="lead">Please fill up all the required informations.</p>
  <hr class="my-4">

  <%=form_tag "/users", method: :post do %>
  <div class="form-group row">
    <label for="name" class="col-sm-3 col-form-label">Name</label>
    <div class="col-sm-9">
      <%= text_field_tag :name, '', class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="email" class="col-sm-3 col-form-label">Email</label>
    <div class="col-sm-9">
      <%= email_field_tag :email, 'email@example.com', class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="password" class="col-sm-3 col-form-label">Password</label>
    <div class="col-sm-9">
      <%= password_field_tag :email, 'email@example.com', class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="password_confirmation" class="col-sm-3 col-form-label">Password Confirmation</label>
    <div class="col-sm-9">
      <%= password_field_tag :email, 'email@example.com', class: "form-control" %>
    </div>
  </div>

  <div class="d-flex justify-content-end">
    <%= submit_tag "Sign Up", class: "btn btn-primary" %>
  </div>
  <% end %>
</div>
