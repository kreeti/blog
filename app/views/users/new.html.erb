<div class="card mx-auto"  style="width: 600px">
  <div class="card-body">
    <h5 class="card-title text-center mb-4" style="font-size: 28px">Create Acccount</h5>

    <%=form_tag "/users", method: :post do %>
    <div class="form-group row">
      <label for="name" class="col-sm-5 col-form-label">Name</label>
      <div class="col-sm-7">
        <%= text_field_tag :name, '', class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="email" class="col-sm-5 col-form-label">Email</label>
      <div class="col-sm-7">
        <%= email_field_tag :email, 'email@example.com', class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="password" class="col-sm-5 col-form-label">Password</label>
      <div class="col-sm-7">
        <%= password_field_tag :password, '', class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="password_confirmation" class="col-sm-5 col-form-label">Password Confirmation</label>
      <div class="col-sm-7">
        <%= password_field_tag :password, '', class: "form-control" %>
      </div>
    </div>

    <div class="d-flex justify-content-end">
      <%= submit_tag "Sign Up", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>
